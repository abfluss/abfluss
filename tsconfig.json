{
    "compilerOptions": {
        "target": "ES2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "strictNullChecks": true,
        "noUnusedLocals": true
    },
    "typeAcquisition": {
        "enable": true
    },
    "exclude": [
        "node_modules",
        "*.spec.ts"
    ],
    "baseUrl": "./src"
}
