{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/chai": "~4.2.12",
    "@types/mocha": "~8.0.3",
    "@types/node": "~14.6.0",
    "@types/sinon": "~9.0.5",
    "commitizen": "~4.2.0",
    "conventional-changelog-eslint": "~3.0.8",
    "cz-conventional-changelog": "~3.2.0",
    "lerna": "~3.22.1"
  },
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "lint": "lerna run lint",
    "docs": "lerna run docs",
    "lint:fix": "lerna run lint:fix",
    "prepublishOnly": "npm run test && npm run docs && npm run build"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
