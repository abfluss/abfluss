{
  "name": "root",
  "private": true,
  "devDependencies": {
    "@types/chai": "4.2.15",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.27",
    "@types/sinon": "9.0.10",
    "commitizen": "4.2.3",
    "conventional-changelog-angular": "5.0.12",
    "cz-conventional-changelog": "3.3.0",
    "lerna": "3.22.1",
    "typedoc": "0.20.24",
    "typescript": "4.1.5"
  },
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test",
    "test:coverage": "lerna run test:coverage",
    "lint": "lerna run lint",
    "docs": "lerna run docs",
    "lint:fix": "lerna run lint:fix",
    "prepublishOnly": "npm run test && npm run docs && npm run build"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "typings",
      "src/**/*.spec.ts",
      "**/*.d.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "json",
      "html",
      "text-summary",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
